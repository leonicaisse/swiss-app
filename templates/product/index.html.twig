{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Voir le stock</h1>
        <div class="bg-light pt-3 px-3 pb-1 my-4">
            {{ form_start(form, {'attr':{'class': 'mb-4'}}) }}
            <div class="form-row">
                <div class="form-group w-100">
                    {{ form_label(form.searchInput) }}
                    <div class="form-inline w-100">
                        {{ form_widget(form.searchInput) }}
                        <button type="submit" class="btn btn-primary ml-2">Rechercher</button>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-1">Afficher:</div>
                <div class="col-md-11">
                    <div class="row">
                        {{ form_widget(form.stock) }}
                    </div>
                </div>
            </div>
            {{ form_end(form, {'render_rest' : false}) }}
        </div>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 col-sm mb-2 mb-md-3">
                    <div class="card">
                        <div class="card-body d-flex">
                            <div>
                                <h3 class="ref">ref: {{ product.reference }}</h3>
                                <h3 class="ref">quantit√© en stock: {{ product.quantity }}</h3>
                            </div>
                            <div class="ml-auto">
                                <a href="{{ path('product.show', {'reference' : product.reference}) }}">icone</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="pagination pagination-container text-center w-100 d-flex justify-content-center">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
{% endblock %}
