{% extends 'base.html.twig' %}

{% block title 'Voir le stock' %}

{% block body %}
    <div class="container mt-4">
        <h1>Voir le stock</h1>
        {{ include('product/_form.html.twig') }}
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 col-sm mb-2 mb-md-3">
                    <div class="card">
                        <div class="card-body d-flex">
                            <div>
                                <h3 class="ref">ref: {{ product.reference }}</h3>
                                <h3 class="ref">quantit√© en stock: {{ product.quantity }}</h3>
                                <h3 class="ref">Description: {{ product.description }}</h3>
                            </div>
                            <div class="ml-auto">
                                <a href="{{ path('product.show', {'reference' : product.reference}) }}">icone</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="pagination pagination-container text-center w-100 d-flex justify-content-center">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        jQuery('#orderDirection .form-check input').on('change', function (e) {
            this.form.submit();
        });
    </script>
{% endblock %}