{{ form_start(form) }}
        {{ form_row(form.reference) }}
<h3>Produits command√©s</h3>
<div class="items" data-prototype="{{ form_widget(form.items.vars.prototype)|e('html_attr') }}">
    {# iterate over each existing tag and render its only field: name #}
    {% for item in form.items %}
        <div class="item">
            <div class="form-row">
                <div class="col">
                    {{ form_row(item.product) }}
                </div>
                <div class="col">
                    {{ form_row(item.orderedQuantity) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {{ form_row(item.file) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {{ form_row(item.estimatedDelivery) }}
                </div>
                <div class="col">
                    {{ form_row(item.realDelivery) }}
                </div>
            </div>
            {{ form_rest(item) }}
        </div>
    {% endfor %}
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}